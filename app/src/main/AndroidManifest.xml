<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <!-- Add Internet permission -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ShiokorityPay"
        tools:targetApi="34">

        <activity
            android:name=".view.splash.SplashActivity"
            android:theme="@style/SplashTheme"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".view.onboarding.OnboardingActivity"
            android:exported="false" />

        <activity
            android:name=".view.authentication.login.LoginActivity"
            android:exported="false" />

        <activity android:name=".view.signup.SignUpActivity"
            android:exported="false" />

        <activity
            android:name=".view.dashboard.MainActivity"
            android:exported="false" />

    </application>
</manifest>